<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ningmeng.manage_course.dao.CategoryMapper">

    <resultMap id="TeachplanNodes" type="com.ningmeng.framework.domain.course.ext.CategoryNode">
        <id property="id" column="one_id"></id>
        <result property="name" column="one_name"></result>
        <collection property="children" ofType="com.ningmeng.framework.domain.course.ext.CategoryNode">
            <id property="id" column="two_id"></id>
            <result property="name" column="two_name"></result>
            <collection property="children" ofType="com.ningmeng.framework.domain.course.ext.CategoryNode">
                <id property="id" column="three_id"></id>
                <result property="name" column="three_name"></result>
            </collection>
        </collection>
    </resultMap>

    <select id="findCategoryList" parameterType="java.lang.String"
            resultMap="TeachplanNodes">
        SELECT a.id one_id,a.name one_name,b.id two_id,b.name two_name,c.id three_id,c.name three_name FROM category a
        LEFT JOIN category b ON a.id = b.parentid
        LEFT JOIN category c ON b.id = c.parentid
        WHERE a.parentid = "0"
        <if test="parentId!=null and parentId!=''">
            and b.id = #{parentId}
        </if>
        order by a.orderby,b.orderby,c.orderby
    </select>


</mapper>